<!-- -*- mode: XML -*- -->

<launch>

<arg name="rgbd_odometry"     default="false"/>





<node pkg="tf" type="static_transform_publisher" name="odom_base_link"
     args="0 0 0 0 0 0  odom base_link 100" />   

<!-- Run the ROS package stereo_image_proc -->


<group ns="rtabmap">   
  <node name="rtabmap" pkg="rtabmap_ros" type="rtabmap" output="screen" args="--delete_db_on_start">
    <param name="frame_id" type="string" value="base_link"/>
    <param name="subscribe_stereo" type="bool" value="false"/>
    <param name="subscribe_depth"  type="bool" value="true"/>
    <param name="approx_sync"      type="bool" value="true"/>
    <param name="queue_size" type="int" value="10"/>

    <!-- RTAB-Map's parameters -->
    
    <param name="wait_for_transform_duration"  type="double"   value="0.2"/>
    <!-- When sending goals on /rtabmap/goal topic, use actionlib to communicate with move_base --> 
	  <param name="use_action_for_goal" type="bool" value="true"/>
    <remap from="move_base"            to="/move_base"/>
    <!-- inputs -->
      
    <remap from="odom"            to="/odom"/>

    <!-- <remap from="left/image_rect"       to="/akrobat_stereo/left/image_rect"/>
    <remap from="right/image_rect"      to="/akrobat_stereo/right/image_rect"/>
    <remap from="left/camera_info"      to="/akrobat_stereopi/left/camera_info"/>
    <remap from="right/camera_info"     to="/akrobat_stereopi/right/camera_info"/> -->
    <remap from="depth/image"     to="/pico_flexx/image_depth"/>
    <remap from="rgb/image"	to="/pico_flexx/image_mono8"/>
    <remap from="rgb/camera_info"	to="/pico_flexx/camera_info"/>

  

  <!-- output -->
  	<remap from="grid_map" to="/map"/>
<!-- Paramter von https://www.zhb.uni-luebeck.de/epubs/ediss1918.pdf Seite 151 -->
<param name="RGBD/LocalImmunizationRatio" type="string" value="0.5"/>
<param name="RGBD/LocalLoopDetectionSpace" type="string" value="true"/>
<param name="RGBD/OptimizeFromGraphEnd" type="string" value="false"/>
<param name="RGBD/OptimizeSlam2D" type="string" value="true"/>
<param name="RGBD/OptimizeStrategy" type="string" value="1"/>
<param name="RGBD/OptimizeIterations" type="string" value="20"/>
<param name="Kp/DetectorStrategy" type="string" value="2"/>
<param name="Kp/NNStrategy" type="string" value="3"/>
<param name="Kp/MaxDepth" type="string" value="4.0"/>
<param name="LccIcp/Type" type="string" value="0"/>
<param name="LccIcp2/CorrespondenceRatio" type="string" value="0.08"/>
<param name="LccBow/MaxDepth" type="string" value="0.0"/>
<param name="LccBow/MinInliers" type="string" value="10"/>
<param name="LccBow/InlierDistance" type="string" value="0.1"/>
<param name="RGBD/AngularUpdate" type="string" value="0.01"/>
<param name="RGBD/LinearUpdate" type="string" value="0.01"/>
<param name="Rtabmap/LoopThr" type="string" value="0.0"/>
<param name="Rtabmap/TimeThr" type="string" value="700"/>
<param name="Rtabmap/DetectionRate" type="string" value="1"/>
<param name="Mem/RehearsalSimilarity" type="string" value="0.45"/>

  </node>
 </group>
</launch>
